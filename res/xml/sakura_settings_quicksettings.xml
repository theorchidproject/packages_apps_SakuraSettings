<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/quicksettings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">


          <PreferenceCategory
                   android:key="social"
                   android:title="@string/social_header" >

             <Preference
                 android:title="@string/website"
                 android:summary="@string/website_description"
                 android:icon="@drawable/ic_website" >
                   <intent
                       android:action="android.intent.action.VIEW"
                       android:data="@string/cos_web_link" />
             </Preference>

             <Preference
                 android:title="@string/cos_telegram"
                 android:summary="@string/cos_telegram_description"
                 android:icon="@drawable/ic_telegram" >
                   <intent
                       android:action="android.intent.action.VIEW"
                       android:data="@string/cos_telegram_link" />
             </Preference>

             <Preference
                 android:title="@string/cos_github"
                 android:summary="@string/cos_github_description"
                 android:icon="@drawable/ic_github" >
                   <intent
                       android:action="android.intent.action.VIEW"
                       android:data="@string/cos_github_link" />
          </Preference>

             <Preference
                  android:title="@string/donation"
                  android:summary="@string/donation_description"
                  android:icon="@drawable/ic_donation" >
                    <intent
                        android:action="android.intent.action.VIEW"
                        android:data="@string/donation_link" />
             </Preference>

          </PreferenceCategory>

          <PreferenceCategory
                   android:key="cos_coreteam"
                   android:title="@string/core_header" >

             <Preference
                  android:title="@string/founder"
                  android:summary="@string/founder_description"
                  android:icon="@drawable/ic_developers" >
                    <intent
                        android:action="android.intent.action.VIEW"
                        android:data="https://github.com/theorchidproject" />
          </Preference>


          <Preference
                  android:title="@string/features"
                  android:summary="@string/features_description"
                  android:icon="@drawable/ic_developers" >
                    <intent
                        android:action="android.intent.action.VIEW"
                        android:data="https://github.com/theorchidproject" />
          </Preference>


          <Preference
                  android:title="@string/designer"
                  android:summary="@string/designer_description"
                  android:icon="@drawable/ic_developers" >
                    <intent
                        android:action="android.intent.action.VIEW"
                        android:data="https://github.com/theorchidproject" />
          </Preference>

          </PreferenceCategory>

        <com.android.settingslib.widget.LayoutPreference
        android:key="sakurasettings_footer"
        android:layout="@layout/sakurasettings_footer_animation" />
        
</PreferenceScreen>
