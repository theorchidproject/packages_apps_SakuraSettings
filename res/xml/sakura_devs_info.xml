              android:key="about"
              android:title="@string/sakura_about_info" >     
       
        <com.android.settingslib.widget.LayoutPreference
        android:key="sakurasettings_footer"
        android:layout="@layout/sakurasettings_footer_animation" />

        <Preference
               android:summary="@string/sakura_about_info_summary" 
               android:icon="@drawable/ic_devs_info" >
        <intent
               android:action="android.intent.action.VIEW"
               android:data="https://paypal.me/theproject" />
        </Preference>
</PreferenceCategory>

<PreferenceCategory
            android:key="sakura_dev"
            android:title="@string/devs_header" >
