            android:title="@string/dev_1"
            android:summary="@string/dev1_description">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/theorchidproject" />
        </Preference>
</PreferenceCategory>

<PreferenceCategory
        android:key="maintainer"
        android:title="@string/device_asus" >

    <Preference
        android:title="@string/device_X00T"
        android:summary="@string/device_X00T_description"
        android:icon="@drawable/ic_devs_phone">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://t.me/teammodmiirequests" />
    </Preference>
</PreferenceCategory>

</PreferenceScreen>
